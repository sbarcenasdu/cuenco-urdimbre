---
const { class: className } = Astro.props;
---

<div class=`${className} w-10/12 m-auto my-8 md:my-16`>
  <div class="flex flex-row items-center justify-between bg-zinc-100 p-2 rounded-t-xl px-32">
    <h1 class="text-5xl text-black">Difusi√≥n</h1>
    <img
      class="max-h-32 object-cover overflow-hidden"
      src="/img-urdimbre/logo-urdimbre.webp"
      alt="logo"
    />
  </div>
  <!-- Carousel container -->
  <div id="stats-diffusion" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators mb-[-50px]">
      <li data-target="#stats-diffusion" data-slide-to="0" class="active"></li>
      <li data-target="#stats-diffusion" data-slide-to="1"></li>
      <li data-target="#stats-diffusion" data-slide-to="2"></li>
      <li data-target="#stats-diffusion" data-slide-to="3"></li>
      <li data-target="#stats-diffusion" data-slide-to="4"></li>
      <li data-target="#stats-diffusion" data-slide-to="5"></li>
      <li data-target="#stats-diffusion" data-slide-to="6"></li>
    </ol>

    <!-- Content -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="/img-urdimbre/difusion/novus.webp" class="d-block w-100" alt="historico estudiantes" />
          </div>
          <div class="item">
            <img src="/img-urdimbre/difusion/ternium.webp" class="d-block w-100" alt="novus" />
          </div>
          <div class="item">
            <img src="/img-urdimbre/difusion/const_seco.webp" class="d-block w-100" alt="ternium" />
          </div>
          <div class="item">
            <img src="/img-urdimbre/difusion/sika.webp" class="d-block w-100" alt="construccion en seco" />
          </div>
          <div class="item">
            <img src="/img-urdimbre/difusion/corona.webp" class="d-block w-100" alt="sika" />
          </div>
          <div class="item">
            <img src="/img-urdimbre/difusion/taller1.webp" class="d-block w-100" alt="corona" />
          </div>
          <div class="item">
            <img src="/img-urdimbre/difusion/taller2.webp" class="d-block w-100" alt="grupo argos" />
          </div>
    </div>

    <!-- Previous/Next controls -->
    <a
      class="left carousel-control"
      href="#stats-diffusion"
      role="button"
      data-slide="prev"
    >
      <span class="icon-prev" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="right carousel-control"
      href="#stats-diffusion"
      role="button"
      data-slide="next"
    >
      <span class="icon-next" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
