document.addEventListener("DOMContentLoaded", function () {
  var btnTop = document.getElementById("btnTop") as HTMLElement;
  var myFooter = document.getElementById("myFooter") as HTMLElement;

  if (btnTop && myFooter) {
    window.addEventListener("scroll", function () {
      var scrollPos = window.scrollY || document.documentElement.scrollTop;
      var myFooterPos = myFooter.getBoundingClientRect().top;

      scrollPos > 500
        ? btnTop.classList.add("active")
        : btnTop.classList.remove("active");

      if (myFooterPos < window.innerHeight) {
        btnTop.style.bottom = (window.innerHeight - myFooterPos + 20) + "px";
      } else {
        btnTop.style.bottom = "20px";
      }
    });

    btnTop.addEventListener("click", function () {
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    });
  }
});

</script>
