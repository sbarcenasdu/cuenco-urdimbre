<style>
  .scroll-to-top {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 50px;
    height: 50px;
    background-color: #007bff8f;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
    text-decoration: none;
    pointer-events: none;
  }

  .scroll-to-top:hover {
    background-color: #007bff;
    transition: all 0.3s ease-in-out;
  }

  .scroll-to-top .arrow {
    color: #fff;
    font-size: 2.3rem;
  }

  .scroll-to-top.active {
    opacity: 1;
    pointer-events: auto;
  }
</style>

