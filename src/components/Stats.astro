---
const { class: className } = Astro.props;
import Linea from "../../public/svg/linea.astro";
---

<div class=`${className} mt-20`>
  <div class="pb-1 title-bg mb-5">
    <h1 class="section-title text-center font-bold text-gray-700 mb-1">
      Estadísticas de participación
    </h1>
    <Linea class="lg:w-[48rem] mx-auto" />
  </div>

  <!-- Carousel container -->
  <div id="stats-pics" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators mb-[-50px]">
      <li data-target="#stats-pics" data-slide-to="0" class="active"></li>
      <li data-target="#stats-pics" data-slide-to="1"></li>
      <li data-target="#stats-pics" data-slide-to="2"></li>
      <li data-target="#stats-pics" data-slide-to="3"></li>
      <li data-target="#stats-pics" data-slide-to="4"></li>
      <li data-target="#stats-pics" data-slide-to="5"></li>
      <li data-target="#stats-pics" data-slide-to="6"></li>
    </ol>

    <!-- Content -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <img src="img-encuentros/metricas/stat-01.webp" alt="metricas global" />
      </div>
      <div class="item">
        <img src="img-encuentros/mapas/map-00.webp" alt=" mapa encuentros" />
      </div>
      <div class="item">
        <img src="img-encuentros/mapas/map-01.webp" alt=" mapa 1 encuentro" />
      </div>
      <div class="item">
        <img src="img-encuentros/mapas/map-02.webp" alt=" mapa 2 encuentro" />
      </div>
      <div class="item">
        <img src="img-encuentros/mapas/map-03.webp" alt=" mapa 3 encuentro" />
      </div>
      <div class="item">
        <img src="img-encuentros/mapas/map-04.webp" alt=" mapa 4 encuentro" />
      </div>
      <div class="item">
        <img src="img-encuentros/mapas/map-05.webp" alt=" mapa 5 encuentro" />
      </div>
    </div>

    <!-- Previous/Next controls -->
    <a
      class="left carousel-control"
      href="#stats-pics"
      role="button"
      data-slide="prev"
    >
      <span class="icon-prev" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="right carousel-control"
      href="#stats-pics"
      role="button"
      data-slide="next"
    >
      <span class="icon-next" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>


