---
const { class: className } = Astro.props;
---

<div class=`${className} mt-10s py-16`>

  <!-- Carousel container -->
  <div id="stats-pics" class="carousel slide -mx-4s" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#stats-pics" data-slide-to="0" class="active"></li>
      <li data-target="#stats-pics" data-slide-to="1"></li>
      <li data-target="#stats-pics" data-slide-to="2"></li>
    </ol>
    <!-- Content -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <div class="row">
          <div class="col-md-6">
            <a href="#" data-toggle="modal" data-target="#abrirModal">
              <img
                src="img-encuentros/metricas/stats-00.png"
                alt="Primer encuentro"
                class="img-thumbnail"
                data-img="img-encuentros/metricas/stats-00.png"
                loading="lazy"
              />
            </a>
          </div>
          <div class="col-md-6">
            <a href="#" data-toggle="modal" data-target="#abrirModal">
              <img
                src="img-encuentros/metricas/stats-01.png"
                alt="Segundo encuentro"
                class="img-thumbnail"
                data-img="img-encuentros/metricas/stats-01.png"
                loading="lazy"
              />
            </a>
          </div>
        </div>
      </div>

      <div class="item">
        <div class="row">
          <div class="col-md-6">
            <a href="#" data-toggle="modal" data-target="#abrirModal">
              <img
                src="img-encuentros/metricas/stats-02.png"
                alt="Tercer encuentro"
                class="img-thumbnail"
                data-img="img-encuentros/metricas/stats-02.png"
                loading="lazy"
              />
            </a>
          </div>
          <div class="col-md-6">
            <a href="#" data-toggle="modal" data-target="#abrirModal">
              <img
                src="img-encuentros/metricas/stats-03.png"
                alt="Tercer encuentro"
                class="img-thumbnail"
                data-img="img-encuentros/metricas/stats-03.png"
                loading="lazy"
              />
            </a>
          </div>
        </div>
      </div>

      <div class="item">
        <div class="row">
          <div class="col-md-6">
            <a href="#" data-toggle="modal" data-target="#abrirModal">
              <img
                src="img-encuentros/metricas/stats-04.png"
                alt="Tercer encuentro"
                class="img-thumbnail"
                data-img="img-encuentros/metricas/stats-04.png"
                loading="lazy"
              />
            </a>
          </div>
          <div class="col-md-6">
            <a href="#" data-toggle="modal" data-target="#abrirModal">
              <img
                src="img-encuentros/metricas/stats-05.png"
                alt="Tercer encuentro"
                class="img-thumbnail"
                data-img="img-encuentros/metricas/stats-05.png"
                loading="lazy"
              />
            </a>
          </div>
        </div>
      </div>
    </div>
    <!-- Previous/Next controls -->
    <a
      class="left carousel-control"
      href="#stats-pics"
      role="button"
      data-slide="prev"
    >
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="right carousel-control"
      href="#stats-pics"
      role="button"
      data-slide="next"
    >
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div id="ventanaModal" class="modal">
  <div class="content-modal">
    <span class="close">&times;</span>
    <img id="modalImage" src="" alt="Imagen en modal" />
  </div>
</div>

<script>
  var modal = document.getElementById("ventanaModal");
  var span = document.getElementsByClassName("close")[0];
  var images = document.querySelectorAll(".img-thumbnail");
  images.forEach(function (image) {
    image.addEventListener("click", function (evt) {
      evt.preventDefault();
      var imgSrc = this.getAttribute("data-img");
      var modalImage = document.getElementById(
        "modalImage"
      ) as HTMLImageElement;
      modalImage.src = imgSrc;
      modal.style.display = "block";
    });
  });

  span.addEventListener("click", function () {
    modal.style.display = "none";
  });

  window.addEventListener("click", function (event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  });
</script>

