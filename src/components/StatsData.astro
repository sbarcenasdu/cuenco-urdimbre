---
const { class: className } = Astro.props;
---

<div class=`${className} w-[90vw] md:w-[80vw] xl:w-3/4 m-auto my-20`>
  <div class="w-full flex flex-row items-center justify-between bg-zinc-100 p-2 rounded-t-xl px-32">
    <h1 class="text-4xl text-black">Datos Estad√≠sticos</h1>
    <img
      class="max-h-24 object-cover overflow-hidden"
      src="img-urdimbre/logo-urdimbre.webp"
      alt="logo"
    />
  </div>
  <!-- Carousel container -->
  <div id="stats-stats-data" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators mb-[-50px]">
      <li data-target="#stats-stats-data" data-slide-to="0" class="active"></li>
      <li data-target="#stats-stats-data" data-slide-to="1"></li>
      <li data-target="#stats-stats-data" data-slide-to="2"></li>
      <li data-target="#stats-stats-data" data-slide-to="3"></li>
      <li data-target="#stats-stats-data" data-slide-to="4"></li>
      <li data-target="#stats-stats-data" data-slide-to="5"></li>
      <li data-target="#stats-stats-data" data-slide-to="6"></li>
      <li data-target="#stats-stats-data" data-slide-to="7"></li>
      <li data-target="#stats-stats-data" data-slide-to="8"></li>
      <li data-target="#stats-stats-data" data-slide-to="9"></li>
      <li data-target="#stats-stats-data" data-slide-to="10"></li>
    </ol>

    <!-- Content -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="img-urdimbre/stats/historicoest.png" class="d-block w-100" alt="historico estudiantes"/>
          </div>
          <div class="item">
            <img src="img-urdimbre/stats/catedranovusEst.png" class="d-block w-100" alt="novus"/>
          </div>
          <div class="item">
            <img src="img-urdimbre/stats/cursoempresafia1Est.png" class="d-block w-100" alt="ternium"/>
          </div>
          <div class="item">
            <img src="img-urdimbre/stats/cursoempresafia2Est.png" class="d-block w-100" alt="construccion en seco"/>
          </div>
          <div class="item">
            <img src="img-urdimbre/stats/cursoempresafia3Est.png" class="d-block w-100" alt="sika"/>
          </div>
          <div class="item">
            <img src="img-urdimbre/stats/cursoempresafia4Est.png" class="d-block w-100" alt="corona"/>
          </div>
          <div class="item">
            <img src="img-urdimbre/stats/cursoempresafia5Est.png" class="d-block w-100" alt="grupo argos"/>
          </div>
          <div class="item">
            <img src="img-urdimbre/stats/tallerinterdisciplinar1Est.png" class="d-block w-100" alt="taller 1"/>
          </div>
          <div class="item">
            <img src="img-urdimbre/stats/tallerinterdisciplinar2Est.png" class="d-block w-100" alt="taller 2"/>
          </div>
          <div class="item">
            <img src="img-urdimbre/stats/promedioporprograma.png" class="d-block w-100" alt="promedio por programa"/>
          </div>
          <div class="item">
            <img src="img-urdimbre/stats/docencia.jpg" class="d-block w-100" alt="docencia"/>
          </div>
    </div>

    <!-- Previous/Next controls -->
    <a
      class="left carousel-control"
      href="#stats-stats-data"
      role="button"
      data-slide="prev"
    >
      <span class="icon-prev" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="right carousel-control"
      href="#stats-stats-data"
      role="button"
      data-slide="next"
    >
      <span class="icon-next" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
