<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuItemsWithSubmenu =
      document.querySelectorAll<HTMLElement>(".menu li:has(ul)");
    const menuButton = document.querySelector<HTMLElement>(".btn-menu");
    const menuContainer = document.querySelector<HTMLElement>(
      ".contenedor-menu .menu"
    );

    menuItemsWithSubmenu.forEach((item) => {
      item.addEventListener("click", (e) => {
        e.preventDefault();

        if (item.classList.contains("activado")) {
          item.classList.remove("activado");
          const submenu = item.children[1] as HTMLElement | undefined;
          if (submenu) {
            submenu.style.display = "none";
          }
        } else {
          closeAllSubmenus();
          item.classList.add("activado");
          const submenu = item.children[1] as HTMLElement | undefined;
          if (submenu) {
            submenu.style.display = "block";
          }
        }
      });
    });

    menuButton?.addEventListener("click", () => {
      if (menuContainer)
        menuContainer.style.display =
          menuContainer.style.display === "none" ||
          menuContainer.style.display === ""
            ? "block"
            : "none";
    });

    window.addEventListener("resize", () => {
      if (menuContainer)
        if (document.documentElement.clientWidth > 450) {
          menuContainer.style.display = "block";
        } else {
          menuContainer.style.display = "none";
          closeAllSubmenus();
        }
    });

    const submenuLinks =
      document.querySelectorAll<HTMLElement>(".menu li ul li a");
    submenuLinks.forEach((link) => {
      link.addEventListener("click", () => {
        window.location.href = link.getAttribute("href") || "";
      });
    });

    function closeAllSubmenus() {
      menuItemsWithSubmenu.forEach((item) => {
        item.classList.remove("activado");
        const submenu = item.children[1] as HTMLElement | undefined;
        if (submenu) {
          submenu.style.display = "none";
        }
      });
    }
  });
  document.addEventListener("DOMContentLoaded", () => {
    const firstMenuItem = document.querySelector(".menu li.activado");
    const firstSubmenu = firstMenuItem.querySelector("ul");

    firstSubmenu.style.display = "block";
  });
</script>
